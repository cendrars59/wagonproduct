<% if @retailers.length != 0 %>
  <% @retailers.each do |retailer|  %>
    <div class="product">
      <% if retailer.photo? %>
        <!-- Decalre the link to retrieve the photo -->
        <%= cl_image_tag(retailer.photo.path, height: 117, width: 175, crop: :fill, class: 'product-image') %>
      <% else %>
        <img src="http://unsplash.it/300/200" alt="substitute" class="product-image hidden-xs" data-toggle="tooltip" data-placement="left" title="country.description">
      <% end %>
      <div class='product-body'>
        <h3> <%= retailer.code %> <%= retailer.label %> </h3>
        <div>Active: <%=  %>
          <% if retailer.active == true%>
              <i class="fa fa-check-square-o checked" aria-hidden="true"></i>
          <% end %>
        </div>
      </div>
      <ul class="list-inline product-controls hidden-sm hidden-xs">
        <li>
          <%= link_to edit_retailer_path(retailer) do %>
            <i class="fa fa-pencil"> </i>
          <% end %>
        </li>
        <li>
          <%= link_to retailer_path(retailer), method: :delete do %>
            <i class="fa fa-trash"> </i>
           <% end %>
        </li>
      </ul>
    </div>
  <% end %>
<% else %>
  <!--Message is displayed if the list is empty -->
  <span class="empty-list-message message-centered">Retailers list is empty. No retailer available</span>
<% end %>
