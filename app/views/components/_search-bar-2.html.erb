<div class="form-group" class="spacing-search">
  <%=label_tag 'search', 'Input', class: 'search_label'  %>
  <%= text_field_tag :search, params[:search] %>
</div>
<div class="form-group" class="spacing-search">
  <%=label_tag 'active', 'Active', class: 'search_label'  %>
  <%= check_box_tag(:active ,"1", (params[:active] == "1")) %>
</div>
<div class="form-group" class="spacing-search">
  <%= submit_tag "Search", class:"btn spacing-search"  %>
</div>