<div class="work-area">
  <h2>Categories</h2>
  <div class="work-area">
      <h2>Countries</h2>
      <div class="container">
        <div class="row">
          <div class="col-xs-12 col-sm-10 col-sm-offset-1">
            <% @categories.each do |category|  %>
            <div class="product">
              <img src="http://unsplash.it/300/200" alt="kudoz" class="product-image hidden-xs">
              <div class='product-body'>
                <h3> <%= category.code %>  <%= category.label %> </h3>
              </div>
              <ul class="list-inline product-controls hidden-sm hidden-xs">
                <li>
                  <%= link_to edit_category_path(category) do %>
                    <i class="fa fa-pencil"> </i>
                  <% end %>
                </li>
                <li>
                  <%= link_to category_path(category), method: :delete do %>
                    <i class="fa fa-trash"> </i>
                  <% end %>
                </li>
              </ul>
              </div>
            <% end %>
              </div>
            <% end %>
            <div class="button-area">
              <%= link_to new_category_path do %>
                <button type="button" name="New" class="btn action">New</button>
              <% end %>
            </div>
          </div>
        </div>
      </div>
  </div>
</div>
