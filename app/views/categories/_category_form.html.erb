<%= simple_form_for @category do |c| %>
  <%= c.input :code %>
  <%= c.input :label %>
  <%= c.input :country_id,collection: @selectable_countries, prompt: "Select a country" %>
  <%= c.input :is_active, as: :boolean, checked_value: true, unchecked_value: false%>
  <%= c.button :submit, "Validate", class: "btn validate" %>
<% end %>
