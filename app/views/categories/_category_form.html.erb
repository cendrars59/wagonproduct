<%= simple_form_for @category do |c| %>
  <%= c.input :code %>
  <%= c.input :label %>
  <%= c.association :country, collection: @selectable_countries.order(:label),:label_method => lambda { |country| "#{country.code} - #{country.label}"},input_html: { class: 'countries-select' } %>
  <%= c.input :is_active %>
  <%= c.input :description, as: :text %>
  <%= c.input :photo, as: :attachinary %>
  <%= c.button :submit, "Validate", class: "btn validate" %>
<% end %>
