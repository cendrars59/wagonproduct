<%= simple_form_for @market do |m| %>
  <%= m.input :code, input_html: {:maxlength => 6 }%>
  <%= m.input :label, input_html: { maxlength: 40 } %>
  <%= m.input :active %>
  <%= m.association :category, label:'Category',collection: @selectable_categories, :label_method => lambda { |category| "#{category.code} - #{category.label}" },include_blank: true,input_html: { class: 'countries-select' } %>
  <%= m.input :description, as: :text ,input_html: { maxlength: 255 } %>
  <%= m.input :photo, as: :attachinary %>
  <%= m.button :submit, "Validate", class: "btn validate" %>
<% end %>
