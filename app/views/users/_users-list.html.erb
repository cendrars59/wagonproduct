<% if @users.length != 0 %>
  <% @users.each do |user|  %>
    <div class="product">
      <% if user.photo? %>
        <!-- Decalre the link to retrieve the photo -->
        <%= cl_image_tag(user.photo.path, height: 117, width: 175, crop: :fill, class: 'product-image') %>
      <% else %>
        <img src="http://unsplash.it/300/200" alt="substitute" class="product-image hidden-xs" data-toggle="tooltip" data-placement="left" title="country.description">
      <% end %>
      <div class='product-body'>
        <h3> <%= user.name %> </h3>
        <div>Active: <%=  %>
          <% if user.active == true%>
              <i class="fa fa-check-square-o checked" aria-hidden="true"></i>
          <% end %>
        </div>
      </div>
      <ul class="list-inline product-controls hidden-sm hidden-xs">
        <li>
          <%= link_to edit_user_path(user) do %>
            <i class="fa fa-pencil"> </i>
          <% end %>
        </li>
        <li>
          <%= link_to user_path(user), method: :delete do %>
            <i class="fa fa-trash"> </i>
          <% end %>
        </li>
      </ul>
    </div>
  <% end %>
<% else %>
  <!--Message is displayed if the list is empty -->
  <span class="empty-list-message message-centered">Users list is empty. No user available</span>
<% end %>
